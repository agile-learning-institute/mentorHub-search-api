{
  "name": "mentorhub-search-api",
  "description": "This is the API used to support search use cases in the mentorhub system",
  "scripts": {
    "build": "tsc",
    "prestart": "tsc; mh up search-db",
    "start": "node ./dist/server.js",
    "stepci": "stepci run ./test/search-stepci.yaml",
    "precontainer": "docker build --tag ghcr.io/agile-learning-institute/mentorhub-search-api:latest",
    "container": "mh up search-api",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@elastic/elasticsearch-mock": "^2.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.21",
    "express-prom-bundle": "^7.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.13.1",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "prom-client": "^15.1.0"
  }
}
